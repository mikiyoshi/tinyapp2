<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button
      class="navbar-toggler"
      type="button"
      data-toggle="collapse"
      data-target="#navbarNavAltMarkup"
      aria-controls="navbarNavAltMarkup"
      aria-expanded="false"
      aria-label="Toggle navigation"
    >
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav-scroll">
        <ul class="navbar-nav mr-auto">
          <li class="nav-item">
            <a class="nav-link text-dark" href="/urls">My URLs</a>
          </li>
          <li class="nav-item">
            <a class="nav-link text-dark" href="/urls/new">Create New URL</a>
          </li>
        </ul>
      </div>

      <% if(!user){ %>
      <div class="collapse navbar-collapse" id="navbarText"></div>

      <ul class="navbar-nav flex-row ml-md-auto d-none d-md-flex">
        <li class="nav-item mx-2">
          <a class="btn btn-outline-dark" href="/register">Register</a>
        </li>
        <li class="nav-item">
          <a class="btn btn-outline-dark" href="/login">Login</a>
        </li>
      </ul>
      <% } else { %>
      <div class="collapse navbar-collapse" id="navbarText"></div>
      <span class="navbar-text text-dark mr-3">
        Logged in As: <%= user.email %>
      </span>
      <form class="form-inline my-2 my-lg-0" method="POST" action="/logout">
        <button type="submit" class="btn btn-outline-dark my-2 my-sm-0">
          Logout
        </button>
      </form>
      <% } %>
    </div>
  </nav>
</header>
